<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="csrf-token" content="@ViewData["RequestVerificationToken"]">
    <title>@ViewData["Title"] - TaskManagement</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/theme.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/board.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TaskManagement.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/mainstyle.css" asp-append-version="true" />

</head>
<body>
<header>
    <!-- Top Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light border-bottom">
        <div class="container-fluid">
            <!-- Brand -->
            <a class="navbar-brand ms-2" asp-area="" asp-controller="Profile" asp-action="Dashboard">Zentask</a>

            <!-- Hamburger Button -->
            <button class="navbar-toggler d-block" type="button" id="sidebarToggle" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Register & Login Links -->
            <div class="ms-auto">
                <partial name="_LoginPartial" />
            </div>
        </div>
    </nav>

    <!-- Sidebar -->
    <div id="sidebar">
        <div class="sidebar-header p-3 border-bottom">
            <h5>Menu</h5>
        </div>
        <ul class="nav flex-column p-3">
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Profile" asp-action="Dashboard">Dashboard</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Board" asp-action="Index">Boards</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Task" asp-action="Index">Tasks</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Calendar" asp-action="Index">Calendar</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Notification" asp-action="Index">Notifications</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-controller="Friendship" asp-action="GetFriends">Friends</a>
            </li>
        </ul>
    </div>
</header>

<div class="container" id="mainContent">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2024 - Zentask - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="~/js/board.js" asp-append-version="true"></script>
<script src="~/js/profile.js" asp-append-version="true"></script>
<script src="~/js/friends.js" asp-append-version="true"></script>
<script src="~/js/push-subscription.js" asp-append-version="true"></script>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>