@model TaskManagement.Models.Board

@{
ViewData["Title"] = "Delete Board";
}
<div class="delete-board-page">
    <div class="form-container">
        <h2 class="board-title">Are you sure you want to delete this board?</h2>
        <h3 class="board-title">@Model.Title</h3>
        <form asp-action="DeleteConfirmed" method="post" class="delete-board-form">
            <input type="hidden" asp-for="Id" />
            <div class="board-actions">
                <button type="submit" class="btn btn-danger">Delete Board</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

