@model IEnumerable<TaskManagement.Models.Board>

<h1>Boards Shared With You</h1>

@if (!Model.Any())
{
    <p>No boards shared with you.</p>
}
else
{
    <ul class="list-group">
        @foreach (var board in Model)
        {
            <li class="list-group-item">
                <h4>@board.Title</h4>
                <a asp-action="Details" asp-controller="Board" asp-route-id="@board.Id" class="btn btn-primary btn-sm">View Board</a>
                <form asp-action="DeleteSharedBoard" asp-controller="Board" method="post" class="d-inline">
                    <input type="hidden" name="boardId" value="@board.Id" />
                    <button type="submit" class="btn btn-danger btn-sm">Remove</button>
                </form>
            </li>
        }
    </ul>
}
