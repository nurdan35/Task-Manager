@{
    ViewData["Title"] = "Task Board";
}

<h1>@ViewData["Title"]</h1>

<div class="board">
    <div class="column" id="todo-column">
        <h2>To Do</h2>
        <ul id="todo-tasks">
            @foreach (var task in ViewBag.TodoTasks)
            {
                <li class="task" data-task-id="@task.Id">@task.Title</li>
            }
        </ul>
    </div>

    <div class="column" id="doing-column">
        <h2>In Progress</h2>
        <ul id="doing-tasks">
            @foreach (var task in ViewBag.DoingTasks)
            {
                <li class="task" data-task-id="@task.Id">@task.Title</li>
            }
        </ul>
    </div>

    <div class="column" id="done-column">
        <h2>Completed</h2>
        <ul id="done-tasks">
            @foreach (var task in ViewBag.DoneTasks)
            {
                <li class="task" data-task-id="@task.Id">@task.Title</li>
            }
        </ul>
    </div>
</div>