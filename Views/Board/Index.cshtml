@model TaskManagement.Models.BoardViewModel

@{
    ViewData["Title"] = "Boards";
}

<div class="boards-page">
    <div class="header-section">
        <h1 class="page-title">@ViewData["Title"]</h1>
        <p class="page-subtitle">Manage your boards effortlessly. View, edit and create new boards to organize your tasks!</p>
        <a asp-action="Create" asp-controller="Board" class="btn btn-primary create-board-btn">Create New Board</a>
    </div>

    <div class="boards-container">
        @if (Model.Boards == null || !Model.Boards.Any())
        {
            <p class="no-boards">No boards available for this user.</p>
        }
        else
        {
                <ul class="boards-list">
                    @foreach (var board in Model.Boards)
                    {
                        <li class="board-item">
                            <strong class="board-title">@board.Title</strong>
                            <div class="board-actions">
                                <a asp-action="Details" asp-route-id="@board.Id" class="btn btn-sm btn-info">View</a>
                                <a asp-action="Edit" asp-route-id="@board.Id" class="btn btn-sm btn-primary">Edit</a>
                                <a asp-action="Delete" asp-route-id="@board.Id" class="btn btn-sm btn-danger">Delete</a>
                            </div>
                        </li>
                    }
                </ul>
            }
        </div>
    </div>



@section Scripts {
    <script src="~/js/board.js"></script>
}