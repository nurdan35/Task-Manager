@model IEnumerable<TaskManagement.ViewModels.FriendRequestViewModel>

<h1>Friend Requests</h1>

@if (!Model.Any())
{
    <p>You have no pending friend requests.</p>
}
else
{
    <ul>
        @foreach (var request in Model)
        {
            <li>
                <strong>@request.RequesterDisplayName</strong> (@request.RequesterEmail)
                <form method="post" asp-controller="Friendship" asp-action="AcceptRequest" style="display: inline;">
                    <input type="hidden" name="requestId" value="@request.RequestId" />
                    <button type="submit" class="btn btn-success btn-sm">Accept</button>
                </form>
                <form method="post" asp-controller="Friendship" asp-action="RejectRequest" style="display: inline;">
                    <input type="hidden" name="requestId" value="@request.RequestId" />
                    <button type="submit" class="btn btn-danger btn-sm">Reject</button>
                </form>
            </li>
        }
    </ul>
}