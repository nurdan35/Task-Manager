@{
    ViewData["Title"] = "Calendar";
}

<!-- Link til ekstern CSS -->
<link rel="stylesheet" href="~/css/calendar.css" />
<link href="https://cdn.jsdelivr.net/npm/fullcalendar@5.11.3/main.min.css" rel="stylesheet" />

<div class="calendar-page">
    <h2 class="page-title">Calendar</h2>

    <!-- Hidden input for antiforgery token om nÃ¸dvendig -->
    <input type="hidden" name="__RequestVerificationToken" value="@ViewData["AntiforgeryToken"]" />

    <div class="search-bar-container">
        <input type="text" id="calendarSearchInput" placeholder="Search events by title or date (YYYY-MM-DD)..." class="form-control search-bar" />
    </div>

    <div class="calendar-container">
        <div id="calendar"></div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@5.11.3/main.min.js"></script>
    <!-- Link til ekstern JS-fil -->
    <script src="~/js/calendar.js"></script>
}