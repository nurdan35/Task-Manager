
@model TaskManagement.Models.ApplicationUser

@{
ViewData["Title"] = "Dashboard";
}

<h2>Welcome, @Model.Nickname!</h2>
<div id="mainContent" class="content">

    <div class="profile-section">
        <div class="row">
            
            <div class="col order-last">
                @if (!string.IsNullOrEmpty(Model.ProfilePicturePath))
                {
                <img src="@Model.ProfilePicturePath" alt="Profile Picture" style="width: 150px; height: 150px; border-radius: 50%;"/>
                }
                else
                {
                <img src="/images/default-profile.jpg" alt="Default Profile Picture" style="width: 150px; height: 150px; border-radius: 50%; object-fit: cover;"/>
                }
            </div>
        </div>
    </div>

    

    <div class="dashboard-container">
        <div class="dashboard-box">
            <a href="/Profile/EditProfile" class="dashboard-link">Manage Profile</a>
        </div>
        <div class="dashboard-box">
            <a href="/Board/Index" class="dashboard-link">Boards</a>
        </div>
        <div class="dashboard-box">
            <a href="/Calendar" class="dashboard-link">Calendar</a>
        </div>
        <div class="dashboard-box">
            <a href="/Friendship/GetFriends" class="dashboard-link">Friends</a>
        </div>
        <div class="dashboard-box">
            <a href="/Notification" class="dashboard-link">Notifications</a>
        </div>
        
    </div>
</div>    