@model TaskManagement.Models.ApplicationUser

@{
ViewData["Title"] = "Edit Profile";
}

<div class="background">
    <div class="profile-edit-page">
        <h2 class="page-title">Edit Your Profile</h2>

        <div class="form-container">
            <form asp-action="EditProfile" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Nickname"></label>
                    <input asp-for="Nickname" class="form-control" />
                    <span asp-validation-for="Nickname" class="validation-error"></span>
                </div>
                
    
    <div class="form-group">
        <label>Change profile picture:</label>
        <div class="available-pictures">
            <img src="/images/profileExamples/profile2.jpeg"
                 class="profile-thumbnail @(Model?.ProfilePicturePath == "/images/profileExamples/profile1.jpeg" ? "selected-thumbnail" : "")"
                 data-image-path="/images/profileExamples/profile2.jpeg"
                 onclick="selectProfilePicture(this)"
                 style="width: 75px; height: 75px; margin: 5px; cursor: pointer; border-radius: 50%; border: 2px solid transparent;" />

            <img src="/images/profileExamples/profile1.jpeg"
                 class="profile-thumbnail @(Model?.ProfilePicturePath == "/images/profileExamples/profile2.jpeg" ? "selected-thumbnail" : "")"
                 data-image-path="/images/profileExamples/profile1.jpeg"
                 onclick="selectProfilePicture(this)"
                 style="width: 75px; height: 75px; margin: 5px; cursor: pointer; border-radius: 50%; border: 2px solid transparent;" />

            <img src="/images/profileExamples/profile3.jpeg"
                 class="profile-thumbnail @(Model?.ProfilePicturePath == "/images/profileExamples/profile3.jpeg" ? "selected-thumbnail" : "")"
                 data-image-path="/images/profileExamples/profile3.jpeg"
                 onclick="selectProfilePicture(this)"
                 style="width: 75px; height: 75px; margin: 5px; cursor: pointer; border-radius: 50%; border: 2px solid transparent;" />

            <img src="/images/profileExamples/profile4.jpeg"
                 class="profile-thumbnail @(Model?.ProfilePicturePath == "/images/profileExamples/profile4.jpeg" ? "selected-thumbnail" : "")"
                 data-image-path="/images/profileExamples/profile4.jpeg"
                 onclick="selectProfilePicture(this)"
                 style="width: 75px; height: 75px; margin: 5px; cursor: pointer; border-radius: 50%; border: 2px solid transparent;" />

            <img src="/images/profileExamples/profile5.jpeg"
                 class="profile-thumbnail @(Model?.ProfilePicturePath == "/images/profileExamples/profile5.jpeg" ? "selected-thumbnail" : "")"
                 data-image-path="/images/profileExamples/profile5.jpeg"
                 onclick="selectProfilePicture(this)"
                 style="width: 75px; height: 75px; margin: 5px; cursor: pointer; border-radius: 50%; border: 2px solid transparent;" />
        </div>
    </div>
                
                <div class="form-group">
        <label for="ProfileImage">Upload your own profile picture: </label>
        <input type="file" class="form-control-file" id="ProfileImage" name="ProfileImage" />
    </div>
    
    <input type="hidden" id="SelectedProfilePicture" name="SelectedProfilePicture" value="@Model.ProfilePicturePath" />

                <button type="submit" class="btn btn-pink">Save Changes</button>
</form>

            <a class="btn btn-secondary spacer" asp-action="Dashboard">Back to Dashboard</a>
        </div>
    </div>
</div>







