@model TaskManagement.Models.ApplicationUser

@{
ViewData["Title"] = "Edit Profile";
}

<div class="background">
    <div class="profile-edit-page">
        <h2 class="page-title">Manage your account</h2>
        <p class="page-subtitle">Change your account settings</p>

        <div class="form-container">
            <form asp-action="EditProfile" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Nickname"></label>
                    <input asp-for="Nickname" class="form-control" />
                    <span asp-validation-for="Nickname" class="validation-error"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Theme">Choose Theme</label>
                    <select asp-for="Theme" class="form-control">
                        <option value="light">Light</option>
                        <option value="dark">Dark</option>
                        <option value="cute">Cute</option>
                    </select>
                    <span asp-validation-for="Theme" class="validation-error"></span>
                </div>

                <div class="form-group">
                    <label for="ProfileImage">Profile Image</label>
                    <input type="file" class="form-control-file" id="ProfileImage" name="ProfileImage" />
                </div>

                <button type="submit" class="btn btn-pink">Save Changes</button>
            </form>

            <a class="btn btn-secondary" asp-action="Dashboard">Back to Dashboard</a>
        </div>
    </div>
</div>

