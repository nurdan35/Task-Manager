@model TaskManagement.Models.NotificationSettingsViewModel

@{
ViewData["Title"] = "Notification Settings";
}

<h2>Notification Settings</h2>

<form asp-action="NotificationSettings" method="post">
    <div class="form-group">
        <label>
            <input type="checkbox" asp-for="EmailNotificationsEnabled" />
            Enable Email Notifications
        </label>
    </div>
    <div class="form-group">
        <label>
            <input type="checkbox" asp-for="SmsNotificationsEnabled" />
            Enable SMS Notifications
        </label>
    </div>
    <button type="submit" class="btn btn-primary">Save Settings</button>
</form>