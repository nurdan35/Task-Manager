@model IEnumerable<TaskManagement.Models.Notification>

<h2>Notifications</h2>

<table class="table">
    <thead>
    <tr>
        <th>Message</th>
        <th>Date</th>
        <th>Status</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var notification in Model)
    {
    <tr class="@((notification.IsRead) ? "text-muted" : "")">
        <td>@notification.Message</td>
        <td>@notification.NotificationDate.ToString("g")</td>
        <td>@(notification.IsRead ? "Read" : "Unread")</td>
    </tr>
    }
    </tbody>
</table>
