@model TaskManagement.Models.TaskItem

<div class="details-page">
    <div class="form-container">
        <h2 class="task-details">Task Details</h2>

        <div class="task-details">
            <p class="task-meta"><strong>Title:</strong> @Model.Title</p>
            <p class="task-meta"><strong>Description:</strong> @Model.Description</p>
            <p class="task-meta"><strong>Status:</strong> @Model.Status</p>
            <p class="task-meta"><strong>Due Date:</strong> @Model.DueDate.ToString("yyyy-MM-dd")</p>
            <p class="task-meta"><strong>Priority:</strong> @Model.Priority</p>
            <p class="task-meta"><strong>Assigned To:</strong> @Model.AssignedTo</p>
        </div>

        <div class="task-actions">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit Task</a>
            <a asp-action="Index" class="btn btn-secondary">Back to Tasks</a>
        </div>
    </div>
</div>
