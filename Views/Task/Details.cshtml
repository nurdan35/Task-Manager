@model TaskManagement.Models.TaskItem

<h2>Task Details</h2>
<p><strong>Title:</strong> @Model.Title</p>
<p><strong>Description:</strong> @Model.Description</p>
<p><strong>Status:</strong> @Model.Status</p>
<p><strong>Due Date:</strong> @Model.DueDate.ToString("yyyy-MM-dd")</p>
<p><strong>Priority:</strong> @Model.Priority</p>
<p><strong>Assigned To:</strong> @Model.AssignedTo</p>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit Task</a>
<a asp-action="Index" class="btn btn-secondary">Back to Tasks</a>