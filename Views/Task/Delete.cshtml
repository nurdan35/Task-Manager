@model TaskManagement.Models.TaskItem

@{
ViewData["Title"] = "Delete Task";
}
<div class="background">
    <div class="delete-task-page">
        <div class="form-container">
            <h2 class="page-title">Are you sure you want to delete this task?</h2>

            <div class="task-details">
                <h3 class="task-title">@Model.Title</h3>
                <p class="task-meta">@Model.Description</p>
                <p class="task-meta"><strong>Due on:</strong> @Model.DueDate.ToString("yyyy-MM-dd")</p>
                <p class="task-meta"><strong>Assigned To:</strong> @Model.AssignedTo</p>
            </div>


            <form asp-action="DeleteConfirmed" method="post" class="task-actions">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-pink">Delete Task</button>
                <a asp-action="Index" class="btn btn-purple">Cancel</a>
            </form>
        </div>
    </div>
</div>
